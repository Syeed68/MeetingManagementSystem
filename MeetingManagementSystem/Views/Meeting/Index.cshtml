@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap-datepicker.standalone.min.css" rel="stylesheet" />
<link href="~/lib/jquery/jquery.timepicker.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/css/select2.min.css" rel="stylesheet" />
<script src="~/lib/jquery/jquery.timepicker.min.js"></script>
<style>
    .card{
         box-shadow: 0 0px 20px 0 rgba(0,0,0,0.2);
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                Meeting Minutes
            </div>
            <div class="card-body">
                    <div class="row">
                        <div class="form-group">
                            <input type="radio" id="corporate" name="customerType" value="corporate">
                            <label for="corporate">Corporate</label> &nbsp;
                            <input type="radio" id="individual" name="customerType" value="individual">
                            <label for="individual">Indivisual</label>
                        </div>
                    </div>
                    <hr />
                <form id="meetingMinuteMaster">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="name" class="col-sm-5">Customer Name<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <select id="name" name="name" class="form-control form-control-sm">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label for="date" class="col-sm-5">Date<span class="text-danger">*</span></label>
                                <div class="col-sm-3">
                                    <input type="text" id="date" name="date" class="form-control form-control-sm" autocomplete="off" />
                                </div>
                                <label for="time" class="col-sm-1" style="padding:0px;">Time<span class="text-danger">*</span></label>
                                <div class="col-sm-3">
                                    <input type="text" id="time" name="time" class="form-control form-control-sm" />
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label for="meetingPlace" class="col-sm-5">Meeting Place<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <input id="meetingPlace" name="meetingPlace" class="form-control form-control-sm" placeholder="meeting place" />
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label for="attendsFromClientSide" class="col-sm-5">Attends From Client Side<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <textarea style="resize:none;width:100%;" id="attendsFromClientSide" name="attendsFromClientSide" class="form-control form-control-sm" placeholder="Present client side"></textarea>
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label class="col-sm-5" for="attendsFromHostSide">Attends From Host Side<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <textarea style="resize:none;width:100%;" id="attendsFromHostSide" name="attendsFromHostSide" class="form-control form-control-sm" placeholder="Present self side"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group row mt-2">
                                <label for="meetingAgenda" class="col-sm-5">Meeting Agenda<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <textarea style="resize:none;width:100%;" id="meetingAgenda" name="meetingAgenda" class="form-control form-control-sm" placeholder="Meeting Agenda"></textarea>
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label for="meetingDiscussion" class="col-sm-5">Meeting Discussion<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <textarea style="resize:none;width:100%;" id="meetingDiscussion" name="meetingDiscussion" class="form-control form-control-sm" placeholder="Meeting Discussion"></textarea>
                                </div>
                            </div>
                            <div class="form-group row mt-2">
                                <label for="meetingDecision" class="col-sm-5">Meeting Decision<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <textarea style="resize:none;width:100%;" id="meetingDecision" name="meetingDecision" class="form-control form-control-sm" placeholder="Meeting Decision"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <hr />
            <div class="card-body">
                <form id="addProductForm" method="post">
                    <div class="row">
                        <div class="col-7">
                            <div class="form-group row">
                                <label for="product" class="col-sm-5">Interested Product/Service<span class="text-danger">*</span></label>
                                <div class="col-sm-7">
                                    <select id="product" class="form-control form-control-sm">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="form-group row mt-1">
                                <label for="quantity" class="col-sm-5">Quantity<span class="text-danger">*</span></label>
                                <div class="col-sm-3">
                                    <input type="text" id="quantity" name="quantity" class="form-control form-control-sm" autocomplete="off" />
                                </div>
                                <label class="col-sm-1" for="unit">Unit</label>
                                <div class="col-sm-3">
                                    <input type="text" id="unit" name="unit" class="form-control form-control-sm" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="col-7 mt-1">
                            <div class="d-flex justify-content-end">
                                <button type="button" id="btnAdd" class="btn btn-primary float-right btn-sm">Add</button>
                                <button type="button" id="btnUpdate" class="btn btn-primary float-right btn-sm" style="display:none;">Update</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <hr />
            <div class="card-body">
                <from id="addMeetingMinutes">
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-bordered table-sm" id="productTbl">
                                <thead>
                                    <tr>
                                        <td>SL#</td>
                                        <td>Interested Product/Service Name</td>
                                        <td>Quantity</td>
                                        <td>Unit</td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </from>
                <hr />
                <div class="row">
                    <div class="col-2">
                        <button type="button" id="btnSave" class="btn btn-success float-left btn-sm">Save</button>
                        <button type="button" id="btnRefresh" class="btn btn-light float-left btn-sm">Refresh</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/jquery/jquery.timepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.10/js/select2.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script>
        $(document).ready(function () {
            $("#product").select2({ width: '100%', placeholder: "select product/service interested", allowClear: true });
            $("#name").select2({ width: '100%', placeholder: "select customer name", allowClear: true });
            $("#date").datepicker();
            $('#time').timepicker();
            getProductService();
        });

        $("input:radio").change(function () {
            var customerType = $(this).val();
            console.log(customerType);
            if (customerType == 'corporate') {
                getCorporateCustomer();
            }
            else if (customerType == 'individual') {
                getIndivisualCustomerInfo();
            }
        });

        function getCorporateCustomer() {
            $.ajax({
                url: "/Customer/GetCorporateCustomerInfo",
                dataType: "json",
                type: "GET",
                success: function (res) {
                    var list = $("#name");
                    list.empty();
                    var option = ``;
                    option += `<option value="">Select customer name</option>`
                    $.each(res, function (key, value) {
                        option += `<option value="${value.id}">${value.name}</opton>`
                    });
                    list.append(option);
                    
                }
            })
        }
        function getIndivisualCustomerInfo() {
            $.ajax({
                url: "/Customer/GetIndivisualCustomerInfo",
                dataType: "json",
                type: "GET",
                success: function (res) {
                    var list = $("#name");
                    list.empty();
                    var option = ``;
                    option += `<option value="">Select customer name</option>`
                    $.each(res, function (key, value) {
                        option += `<option value="${value.id}">${value.name}</opton>`
                    });
                    list.append(option);

                }
            })
        }
        
        function getProductService(){
            $.ajax({
                url: "/ProductService/GetProductService",
                dataType:"json",
                type:"GET",
                success:function(res){
                    var list = $("#product");
                    list.empty();
                    var option = ``;
                    option += `<option value="">select product/service interested</option>`;
                    $.each(res, function (key,value) {
                        option +=`<option value="${value.id}">${value.name}</option>`
                    });
                    list.append(option);
                    
                }
            });
        }

        

        $(document).on("change", "#product", function () {
            $.ajax({
                url: "/ProductService/GetUnit",
                dataType: "json",
                data: { id: $("#product").val() },
                type: "GET",
                success: function (res) {
                    $("#unit").val(res);
                }
            });
        })

        
        var sl = 1;
        $("#btnAdd").click(function () {
            if ($("#addProductForm").valid()) {
                let productInfo={
                    productId:"",
                    productName:"",
                    quantity:"",
                    unit:""
                }
                if (!parseFloat($("#quantity").val())) {
                    alert("Quantity is required");
                    return;
                }

                if ($("#product option:selected").val() == "") {
                    alert("product is required");
                    return;
                }

                productInfo.productId = $("#product").val();
                productInfo.productName = $("#product option:selected").text();
                productInfo.quantity = $("#quantity").val();
                productInfo.unit = $("#unit").val();
                content = ``;
                content += `<tr>
                            <td>${sl++}</td>
                            <td><input id="prId" type="hidden" value="${productInfo.productId}"/><span id="prName">${productInfo.productName}</span></td>
                            <td style="text-align:center;"><input type="text" class="quantity" value="${productInfo.quantity}" style="text-align:center;width:40%;" disabled/></td>
                            <td><span id="prUnit">${productInfo.unit}</span></td>
                            <td><a class="btn btn-sm btn-primary edit" href = "#" >Edit</a>&nbsp;<a class="btn btn-sm btn-danger delete" href = "#" >Delete</a></td>
                        </tr>`
                $("#productTbl tbody").append(content);
                $("#addProductForm").trigger("reset");
                $("#product").val("").trigger("change");
            }
        });

        $(document).on("click", ".delete", function (e) {
            e.preventDefault();
            $(this).closest("tr").remove();
        });
        $(document).on("click", ".edit", function (e) {
            e.preventDefault();
            let productId = $(this).closest("tr").find("#prId").val();
            $("#product").val(productId).trigger("change");
            $("#quantity").val($(this).closest("tr").find(".quantity").val());
            $("#unit").val($(this).closest("tr").find("#prUnit").text());
            $("#btnUpdate").show();
            $("#btnAdd").hide();
            // $("#product").attr("disabled", "disabled");
            // $("#product").attr("disabled", true);
            $("#product").prop("disabled", true);
        });

        $(document).on("click", "#btnUpdate", function () {
            let productInfo = {
                productId: "",
                productName: "",
                quantity: "",
                unit: ""
            }
            productInfo.productId = +$("#product").val();
            productInfo.productName = $("#product option:selected").text();
            productInfo.quantity = $("#quantity").val();
            productInfo.unit = $("#unit").val();

            $("#productTbl tbody tr").each(function () {
                let productId = +$(this).find("#prId").val();
                if (productInfo.productId == productId) {
                    $(this).find("#prId").val(productInfo.productId);
                    $(this).find("#prName").text(productInfo.productName);
                    $(this).find(".quantity").val(productInfo.quantity);
                    $(this).find("#prUnit").text(productInfo.unit);
                }
            });
            $("#product").removeAttr("disabled");
            $("#addProductForm").trigger("reset");
            $("#product").val("").trigger("change");
            $("#btnUpdate").hide();
            $("#btnAdd").show();
        });

        $(document).on("click", "#btnSave", function () {
            if($("#meetingMinuteMaster").valid()){
                let meetingMinutesMaster = {
                    customerId: "",
                    date: "",
                    time: "",
                    meetingPlace: "",
                    attendsFromClientSide: "",
                    attendsFromHostSide: "",
                    meetingAgenda: "",
                    meetingDiscussion: "",
                    meetingDecision: "",
                    products:""
                }
                meetingMinutesMaster.customerId = $("#name").val();
                meetingMinutesMaster.date = $("#date").val();
                meetingMinutesMaster.time = $("#time").val();
                meetingMinutesMaster.meetingPlace = $("#meetingPlace").val();
                meetingMinutesMaster.attendsFromClientSide = $("#attendsFromClientSide").val();
                meetingMinutesMaster.attendsFromHostSide = $("#attendsFromHostSide").val();
                meetingMinutesMaster.meetingAgenda = $("#meetingAgenda").val();
                meetingMinutesMaster.meetingDiscussion = $("#meetingDiscussion").val();
                meetingMinutesMaster.meetingDecision = $("#meetingDecision").val();
                
                var products = [];
                $("#prId").each(function (key, value) {
                    let productId = $(this).val();
                    let quantity = parseFloat($(this).closest("tr").find(".quantity").val());
                    products.push({ productId: productId, quantity: quantity })
                });
                meetingMinutesMaster.products = products;
                $.ajax({
                    url: "/Meeting/Create",
                    data: { vm: meetingMinutesMaster },
                    dataType:"json",
                    type: "post",
                    success: function(res){

                    }
                });
            }
            



        });

        $("#meetingMinuteMaster").validate({
            rules: {
                name: { required: true },
                date: { required: true },
                time: { required: true },
                meetingPlace: { required: true },
                attendsFromClientSide: { required: true },
                attendsFromHostSide: { required: true },
                meetingAgenda: { required: true },
                meetingDiscussion: { required: true },
                meetingDecision: { required: true },
            },
            messages: {
                name: 'Name is required',
                date: 'Date is required',
                time: 'Time is required',
                meetingPlace: 'Meeting place is required',
                attendsFromClientSide: 'Attends from clientSide is required',
                attendsFromHostSide: 'Attends From HostSide is required',
                meetingAgenda: 'Meeting Agenda is required',
                meetingDiscussion: 'Meeting Discussion is required',
                meetingDecision: 'Meeting Decision is required',
            }, 
            highlight: function (element) {
                $(element).parent().addClass('error')
            },
            unhighlight: function (element) {
                $(element).parent().removeClass('error')
            }
        });

        $("#addProductForm").validate({
            rules: {
                product: { required: true },
                quantity: { required: true },
                unit: { required: true }
            },
            messages: {
                product: 'Product is required',
                quantity: 'Quantity is required',
                unit: 'Unit is required'
            },
            highlight: function (element) {
                $(element).parent().addClass('error')
            },
            unhighlight: function (element) {
                $(element).parent().removeClass('error')
            }
        });

    </script>
    <style>
        .error {
            color: #F00;
            background-color: #FFF;
        }
    </style>

